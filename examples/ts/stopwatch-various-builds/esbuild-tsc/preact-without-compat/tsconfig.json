{
  "include": ["src", "shims"],
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "inlineSources": true,
    "incremental": true,
    "importHelpers": true,
    "lib": ["es6", "dom"],
    "types": ["react", "react-dom"],
    "outDir": "./build"
  }
}
