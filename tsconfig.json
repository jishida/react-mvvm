{
  "include": ["src"],
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"],
    "types": ["react", "react-dom"],
    "paths": {
      "@jishida/react-mvvm": ["./src"],
      "@jishida/react-mvvm/lite": ["./lite/src"]
    }
  }
}
